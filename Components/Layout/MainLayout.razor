@inherits LayoutComponentBase

<!-- Fluent UI Enhanced Main Layout -->
<div class="fluent-app-container">
    <div class="fluent-sidebar">
        <NavMenu />
    </div>

    <main class="fluent-main-content">
        <header class="fluent-top-bar">
            <div class="fluent-top-bar-content">
                <!-- Top bar content can be added here if needed -->
            </div>
        </header>

        <article class="fluent-content">
            @Body
        </article>
    </main>
</div>

<!-- Fluent UI Error Boundary -->
<div id="blazor-error-ui" class="fluent-error-boundary" data-nosnippet>
    <div class="fluent-error-icon">
        <svg width="24" height="24" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg>
    </div>
    <div class="fluent-error-content">
        <p>Something went wrong. Please reload the page or contact support if the problem persists.</p>
        <div class="fluent-error-actions">
            <a href="." class="fluent-button fluent-button-primary">Reload Page</a>
        </div>
    </div>
    <button class="fluent-error-dismiss" onclick="document.getElementById('blazor-error-ui').style.display='none'" aria-label="Dismiss error">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L8 7.293 5.354 4.646a.5.5 0 0 1 0-.708z"/>
        </svg>
    </button>
</div>

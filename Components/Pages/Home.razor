@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<!-- Simplified Fluent UI Home Page -->
<div class="fluent-home-container">
    <!-- Hero Section -->
    <section class="fluent-hero-section">
        <div class="fluent-hero-background">
            <div class="fluent-hero-pattern"></div>
        </div>
        <div class="fluent-hero-content">
            <div class="fluent-hero-icon">
                <svg width="64" height="64" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                    <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7zM5 8a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm4 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                </svg>
            </div>
            
            <h1 class="fluent-hero-title">Cross-Tenant Communication</h1>
            <p class="fluent-hero-subtitle">
                Experience seamless multi-tenant communication with Azure Communication Services. 
                Connect users from different Azure tenants in a single, secure chat environment powered by Microsoft's enterprise-grade infrastructure.
            </p>
            
            <div class="fluent-hero-actions">
                <a href="/login?returnUrl=/chat" class="fluent-button fluent-button-primary fluent-button-large">
                    <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                        <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7z"/>
                    </svg>
                    Start Chatting
                </a>
            </div>
        </div>
    </section>
</div>